<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.joker.summary"
    android:versionCode="1"
    android:versionName="0.0.1">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.DirectoryActivity"
            android:label="@string/title_activity_directory"></activity>
        <activity
            android:name=".activity.media.MediaRecorderActivity"
            android:label="@string/title_activity_media_recorder"></activity>
        <activity
            android:name=".activity.media.TextureviewActivity"
            android:label="@string/title_activity_textureview"></activity>
        <activity
            android:name=".activity.media.MediaActivity"
            android:label="@string/title_activity_media"></activity>
        <activity
            android:name=".activity.media.FFmpegActivity"
            android:label="@string/title_activity_ffmpeg"></activity>
        <activity
            android:name=".activity.TcpActivity"
            android:label="@string/title_activity_tcp"></activity>
    </application>

</manifest>
